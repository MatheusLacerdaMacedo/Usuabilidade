public class Funcionario extends Pessoa(){
private int matricula;
private double salario;
}
public Funcionario () {
    this.matricula = matricula;
    this.salario = salario;
}
public Funcionario(String nome, String sobrenome, int matricula, double salario){
    super(nome, sobrenome);
    this.matricula = matricula;
    this.salario = salario;
}
public String getmatricula() {
        return matricula;
    }

    public void setmatricula(int matricula) {
        this.matricula = matricula;
    }
public String getsalario(double salario) {
        return salario;
    }

    public void setsalario(double salario) throws Exception {
        if (salario<0){
            throw new exception("Salario invalido")
        }
    } {
        this.salario = salario;
    }
    public void getsalarioPrimeriaparcela(){
        return: salario * 0.6;
    }
    public void getsalarioSegundaparcela(){
        return: salario * 0.4;
    }
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Informe seu nome:");
        String nome = scanner.nextLine();

        System.out.println("Informe seu sobrenome:");
        String sobrenome = scanner.nextLine();

        Pessoa pessoa = new Pessoa(nome, sobrenome);
        
        System.out.println("Informe o salario:");
        double salario = scanner.nextLine();
        
        System.out.println("Matricula:");
        int matricula = scanner.nextLine();

        System.out.println("Nome completo: " + pessoa.getNomeCompleto());
        
        scanner.close();
    }
